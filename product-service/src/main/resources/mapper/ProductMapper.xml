<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.seata.samples.product.dao.ProductMapper">

    <resultMap id="BaseResultMap" type="io.seata.samples.product.entity.Product" >
        <result column="sysno" property="sysNo" />
        <result column="product_name" property="productName" />
        <result column="product_title" property="productTitle" />
        <result column="product_desc" property="productDesc" />
        <result column="product_desc_long" property="productDescLong" />
        <result column="default_image_src" property="defaultImageSrc" />
        <result column="c3_sysno" property="c3SysNo" />
        <result column="barcode" property="barcode" />
        <result column="length" property="length" />
        <result column="width" property="width" />
        <result column="height" property="height" />
        <result column="weight" property="weight" />
        <result column="merchant_sysno" property="merchantSysNo" />
        <result column="merchant_productid" property="merchantProductId" />
        <result column="status" property="status" />
        <result column="gmt_create" property="gmtCreate" />
        <result column="create_user" property="createUser" />
        <result column="modify_user" property="modifyUser" />
        <result column="gmt_modified" property="gmtModified" />
    </resultMap>

    <sql id="Base_Column_List">
                sysno,
                product_name,
                product_title,
                product_desc,
                product_desc_long,
                default_image_src,
                c3_sysno,
                barcode,
                length,
                width,
                height,
                weight,
                merchant_sysno,
                merchant_productid,
                status,
                gmt_create,
                create_user,
                modify_user,
                gmt_modified
    </sql>

    <insert id="insert" parameterType="io.seata.samples.product.entity.Product">
        INSERT INTO product
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test ='null != sysNo'>
                sysno,
            </if>
            <if test ='null != productName'>
                product_name,
            </if>
            <if test ='null != productTitle'>
                product_title,
            </if>
            <if test ='null != productDesc'>
                product_desc,
            </if>
            <if test ='null != productDescLong'>
                product_desc_long,
            </if>
            <if test ='null != defaultImageSrc'>
                default_image_src,
            </if>
            <if test ='null != c3SysNo'>
                c3_sysno,
            </if>
            <if test ='null != barcode'>
                barcode,
            </if>
            <if test ='null != length'>
                length,
            </if>
            <if test ='null != width'>
                width,
            </if>
            <if test ='null != height'>
                height,
            </if>
            <if test ='null != weight'>
                weight,
            </if>
            <if test ='null != merchantSysNo'>
                merchant_sysno,
            </if>
            <if test ='null != merchantProductId'>
                merchant_productid,
            </if>
            <if test ='null != status'>
                status,
            </if>
            <if test ='null != gmtCreate'>
                gmt_create,
            </if>
            <if test ='null != createUser'>
                create_user,
            </if>
            <if test ='null != modifyUser'>
                modify_user,
            </if>
            <if test ='null != gmtModified'>
                gmt_modified
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test ='null != sysNo'>
                #{sysNo},
            </if>
            <if test ='null != productName'>
                #{productName},
            </if>
            <if test ='null != productTitle'>
                #{productTitle},
            </if>
            <if test ='null != productDesc'>
                #{productDesc},
            </if>
            <if test ='null != productDescLong'>
                #{productDescLong},
            </if>
            <if test ='null != defaultImageSrc'>
                #{defaultImageSrc},
            </if>
            <if test ='null != c3SysNo'>
                #{c3SysNo},
            </if>
            <if test ='null != barcode'>
                #{barcode},
            </if>
            <if test ='null != length'>
                #{length},
            </if>
            <if test ='null != width'>
                #{width},
            </if>
            <if test ='null != height'>
                #{height},
            </if>
            <if test ='null != weight'>
                #{weight},
            </if>
            <if test ='null != merchantSysNo'>
                #{merchantSysNo},
            </if>
            <if test ='null != merchantProductId'>
                #{merchantProductId},
            </if>
            <if test ='null != status'>
                #{status},
            </if>
            <if test ='null != gmtCreate'>
                #{gmtCreate},
            </if>
            <if test ='null != createUser'>
                #{createUser},
            </if>
            <if test ='null != modifyUser'>
                #{modifyUser},
            </if>
            <if test ='null != gmtModified'>
                #{gmtModified}
            </if>
        </trim>
    </insert>

    <delete id="delete" >
        DELETE FROM product
        WHERE sysno = #{sysno}
    </delete>


    <select id="load" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM product
        WHERE sysno = #{sysno}
    </select>

    <select id="pageList" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM product
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="pageListCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM product
    </select>

</mapper>